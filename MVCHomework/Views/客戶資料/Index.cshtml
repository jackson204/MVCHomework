@model IEnumerable<MVCHomework.Models.客戶資料>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm("Index", "客戶資料", FormMethod.Get))
{
    <p>
        搜尋：@Html.TextBox("keyword")
    </p>}

<table clas
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <a href="@Url.Action("Index", new {
                    sortBy = "客戶名稱",
                    sortDirection = "ASC",
                    keyword = Html.Value("keyword") })">⬆</a>
            @Html.DisplayNameFor(model => model.客戶名稱)
